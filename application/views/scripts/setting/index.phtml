 			$(".err1").html('<label for="" class="lblTxt" style="color:red;">Please enter Hardware Payout.</label>');
 			return false;
 		}

 		if((inputPayoutNic).trim()==''){
 			$(".err1").html('<label for="" class="lblTxt" style="color:red;">Please enter Percent Increase.</label>');
 			return false;
 		}

 		if((inputAllowedKits).trim()==''){
 			$(".err1").html('<label for="" class="lblTxt" style="color:red;">Please enter Allowed Kits.</label>');
 			return false;
 		}

