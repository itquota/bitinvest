 		}

 		if((inputHashRateMhz).trim()==''){
 			$(".err1").html('<label for="" class="lblTxt" style="color:red;">Please enter Hardware Hash Rate.</label>');
 			return false;
 		}

 		if((inputTarget).trim()==''){
 			$(".err1").html('<label for="" class="lblTxt" style="color:red;">Please enter Target.</label>');
 			return false;
 		}

 		if((inputProgress).trim()==''){
 			$(".err1").html('<label for="" class="lblTxt" style="color:red;">Please enter Progress.</label>');
 			return false;
 		}

 		if((inputPayoutGhz).trim()==''){
 			$(".err1").html('<label for="" class="lblTxt" style="color:red;">Please enter Payout.</label>');
