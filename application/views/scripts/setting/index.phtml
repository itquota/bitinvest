 		form_data.append("inputProgress", inputProgress);
 		form_data.append("inputPayoutGhz", inputPayoutGhz);
 		form_data.append("inputPayoutMhz", inputPayoutMhz);
 		form_data.append("inputPayoutNic", inputPayoutNic);
 		form_data.append("inputAllowedKits", inputAllowedKits);
 		form_data.append("inputPerKitCost", inputPerKitCost);
 		form_data.append("inputShippingCost", inputShippingCost);
